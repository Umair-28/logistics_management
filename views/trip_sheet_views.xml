<odoo>

    <record id="action_trip_sheet" model="ir.actions.act_window">
        <field name="name">Trip Sheet</field>
        <field name="res_model">trip.sheet</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="view_trip_sheet_list" model="ir.ui.view">
        <field name="name">trip.sheet.list</field>
        <field name="model">trip.sheet</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="total_distance"/>
            </list>
        </field>
    </record>

    <record id="view_trip_sheet_form" model="ir.ui.view">
        <field name="name">trip.sheet.form</field>
        <field name="model">trip.sheet</field>
        <field name="arch" type="xml">
            <form string="Trip Sheet">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="vehicle_id"/>
                        <field name="driver_id"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="total_distance"/>
                        <field name="remarks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>
