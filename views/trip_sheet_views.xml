<odoo>
    <record id="action_trip_sheet" model="ir.actions.act_window">
        <field name="name">Trip Sheets</field>
        <field name="res_model">trip.sheet</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="view_trip_sheet_form" model="ir.ui.view">
        <field name="name">trip.sheet.form</field>
        <field name="model">trip.sheet</field>
        <field name="arch" type="xml">
            <form string="Trip Sheet" create="true" edit="true">
                <header>
                    <button name="action_start" string="Start Trip" type="object" class="btn-primary" invisible="status != 'draft'"/>

                    <button name="action_complete" string="Complete Trip" type="object" class="btn-success" invisible="status != 'in_progress'"/>

                    <button name="action_cancel" string="Cancel" type="object" class="btn-danger" invisible="status in ('completed','cancelled')"/>

                    <field name="status" widget="statusbar" statusbar_visible="draft,in_progress,completed,cancelled"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="vehicle_id"/>
                            <field name="driver_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <group>
                            <field name="duration_hours" readonly="1"/>
                            <field name="total_distance"/>
                            <field name="remarks"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_trip_sheet_list" model="ir.ui.view">
        <field name="name">trip.sheet.list</field>
        <field name="model">trip.sheet</field>
        <field name="arch" type="xml">
            <list string="Trip Sheets" default_order="id desc">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="total_distance"/>
                <field name="duration_hours"/>
                <field name="status"/>
            </list>
        </field>
    </record>




</odoo>
