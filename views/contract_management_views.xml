<odoo>
    <record id="view_logistics_contract_form" model="ir.ui.view">
        <field name="name">logistics.contract.form</field>
        <field name="model">logistics.contract</field>
        <field name="arch" type="xml">
            <form string="Contract">
                <header>
                    <button name="action_activate" string="Activate" type="object" class="btn-primary" invisible="status != 'draft'"/>
                    <button name="action_terminate" string="Terminate" type="object" class="btn-danger" invisible="status not in ('active')"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,active,expired,terminated"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="partner_id"/>
                            <field name="contract_type"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="route_ids" widget="many2many_tags"/>
                            <field name="vehicle_ids" widget="many2many_tags"/>
                            <field name="is_expired" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Remarks">
                            <field name="remarks"/>
                        </page>
                        <page string="Attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                        <page string="Chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_logistics_contract_list" model="ir.ui.view">
        <field name="name">logistics.contract.list</field>
        <field name="model">logistics.contract</field>
        <field name="arch" type="xml">
            <list string="Contracts">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="contract_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="status"/>
                <field name="is_expired"/>
            </list>
        </field>
    </record>

    <record id="action_logistics_contract" model="ir.actions.act_window">
        <field name="name">Contracts</field>
        <field name="res_model">logistics.contract</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
