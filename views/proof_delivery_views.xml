<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Action -->
    <record id="action_proof_delivery" model="ir.actions.act_window">
        <field name="name">Proof of Delivery</field>
        <field name="res_model">proof.delivery</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Form View -->
    <record id="view_proof_delivery_form" model="ir.ui.view">
        <field name="name">proof.delivery.form</field>
        <field name="model">proof.delivery</field>
        <field name="arch" type="xml">
            <form string="Proof of Delivery">
                <header>
                    <!-- Modern Odoo 18 visibility syntax -->
                    <button name="action_mark_delivered" string="Mark Delivered" type="object" class="btn-primary" invisible="status != 'draft'"/>

                    <button name="action_verify" string="Mark Verified" type="object" class="btn-success" invisible="status != 'delivered'"/>

                    <button name="action_cancel" string="Cancel" type="object" class="btn-danger" invisible="status == 'cancelled' or status == 'verified'"/>

                    <field name="status" widget="statusbar" statusbar_visible="draft,delivered,verified,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="dispatch_id"/>
                            <field name="lorry_receipt_id"/>
                            <field name="status" widget="statusbar" statusbar_visible="draft,delivered,verified"/>
                        </group>
                        <group>
                            <field name="received_by"/>
                            <field name="delivery_date"/>
                            <field name="remarks"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Attachments">
                            <group>
                                <field name="pod_document" filename="pod_filename"/>
                                <field name="signature"/>
                            </group>
                        </page>
                        <page string="Verification">
                            <group>
                                <field name="verified_by" readonly="1"/>
                                <field name="verified_date" readonly="1"/>
                            </group>
                        </page>
                    </notebook>

                    <footer>
                        <!-- âœ… Correct OWL conditional rendering -->
                        <button name="action_mark_delivered" string="Mark Delivered" type="object" class="btn-primary" invisible="status != 'draft'"/>

                        <button name="action_verify" string="Verify" type="object" class="btn-success" invisible="status != 'delivered'"/>

                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_proof_delivery_list" model="ir.ui.view">
        <field name="name">proof.delivery.list</field>
        <field name="model">proof.delivery</field>
        <field name="arch" type="xml">
            <list string="Proof of Deliveries" default_order="delivery_date desc">
                <field name="name"/>
                <field name="dispatch_id"/>
                <field name="lorry_receipt_id"/>
                <field name="received_by"/>
                <field name="delivery_date"/>
                <field name="status"/>
                <field name="verified_by"/>
            </list>
        </field>
    </record>


</odoo>
