<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========== Action ========== -->
    <record id="action_route_dispatch" model="ir.actions.act_window">
        <field name="name">Route Dispatch</field>
        <field name="res_model">route.dispatch</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                    Create your first Route Dispatch record
            </p>
        </field>
    </record>

    <!-- ========== list/List View ========== -->
    <record id="view_route_dispatch_list" model="ir.ui.view">
        <field name="name">route.dispatch.list</field>
        <field name="model">route.dispatch</field>
        <field name="arch" type="xml">
            <list string="Route Dispatch" default_order="dispatch_date desc">
                <field name="name"/>
                <field name="dispatch_date"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="route_id"/>
                <field name="source_location"/>
                <field name="destination_location"/>
                <field name="status" widget="badge" options="{'clickable': False}"/>
            </list>
        </field>
    </record>

    <!-- ========== Form View ========== -->
    <record id="view_route_dispatch_form" model="ir.ui.view">
        <field name="name">route.dispatch.form</field>
        <field name="model">route.dispatch</field>
        <field name="arch" type="xml">
            <form string="Route Dispatch" create="true" edit="true">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="dispatch_date"/>
                            <field name="vehicle_id"/>
                            <field name="driver_id"/>
                            <field name="route_id"/>
                        </group>
                        <group>
                            <field name="source_location"/>
                            <field name="destination_location"/>
                            <field name="distance_km"/>
                            <field name="estimated_time"/>
                        </group>
                    </group>

                </sheet>


            </form>
        </field>
    </record>

</odoo>
