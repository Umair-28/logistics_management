<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!-- ========== list/List View ========== -->
    <record id="view_route_dispatch_list" model="ir.ui.view">
        <field name="name">route.dispatch.list</field>
        <field name="model">route.dispatch</field>
        <field name="arch" type="xml">
            <list string="Route Dispatch" default_order="dispatch_date desc">
                <field name="name"/>
                <field name="dispatch_date"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="route_id"/>
                <field name="source_location"/>
                <field name="destination_location"/>
                <field name="status" widget="badge" options="{'clickable': False}"/>
            </list>
        </field>
    </record>

    <!-- ========== Form View ========== -->
    <record id="view_route_dispatch_form" model="ir.ui.view">
        <field name="name">route.dispatch.form</field>
        <field name="model">route.dispatch</field>
        <field name="arch" type="xml">
            <form string="Route Dispatch" create="true" edit="true">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="dispatch_date"/>
                            <field name="vehicle_id"/>
                            <field name="driver_id"/>
                            <field name="route_id"/>
                        </group>
                        <group>
                            <field name="source_location"/>
                            <field name="destination_location"/>
                            <field name="distance_km"/>
                            <field name="estimated_time"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Trip Details">
                            <group>
                                <field name="status" widget="statusbar" statusbar_visible="draft,in_transit,completed,cancelled"/>
                                <field name="trip_sheet_id"/>
                                <field name="total_lr" readonly="1"/>
                                <field name="total_fuel"/>
                                <field name="mileage"/>
                                <field name="remarks"/>
                            </group>
                        </page>

                        <page string="Lorry Receipts (LR)">
                            <field name="lr_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="consignee"/>
                                    <field name="total_weight"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>

                        <page string="Proof of Delivery (POD)">
                            <field name="pod_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="received_by"/>
                                    <field name="delivery_date"/>
                                    <field name="remarks"/>
                                </list>
                            </field>
                        </page>

                        <page string="E-Way Bills">
                            <field name="ewaybill_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="ewaybill_no"/>
                                    <field name="valid_upto"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <footer>
                    <button name="action_start_trip" type="object" string="Start Trip" class="btn-primary" attrs="{'invisible': [('status', '!=', 'draft')]}"/>
                    <button name="action_complete_trip" type="object" string="Complete Trip" class="btn-success" attrs="{'invisible': [('status', '!=', 'in_transit')]}"/>
                    <button name="action_cancel_trip" type="object" string="Cancel" class="btn-secondary" attrs="{'invisible': [('status', 'in', ['completed', 'cancelled'])]}"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
