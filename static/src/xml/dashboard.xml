<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="lms.Dashboard" owl="1">
        <div class="lms-dashboard-wrapper">
            <!-- Sidebar Toggle Button (Mobile) -->
            <button class="lms-sidebar-toggle" t-on-click="toggleSidebar" style="display:none;">
                â˜°
            </button>
            
            <!-- Sidebar -->
            <aside class="lms-sidebar" t-att-class="{'hidden': !state.sidebarVisible}">
                <div class="lms-logo">
                    <span class="logo-icon">ðŸšš</span>
                    <span class="logo-text">Logistics Management</span>
                </div>
                
                <nav class="lms-menu">
                    <button class="lms-menu-item" 
                            t-on-click="() => setActiveSection('overview')" 
                            t-att-class="{'active': state.tab === 'overview'}">
                        <span class="menu-icon">ðŸ“Š</span>
                        <span class="menu-text">Dashboard</span>
                    </button>
                    
                    <button class="lms-menu-item" 
                            t-on-click="() => setActiveSection('lead')" 
                            t-att-class="{'active': state.tab === 'lead'}">
                        <span class="menu-icon">ðŸ‘¥</span>
                        <span class="menu-text">CRM Leads</span>
                    </button>
                    
                    <button class="lms-menu-item" 
                            t-on-click="() => setActiveSection('warehouse')" 
                            t-att-class="{'active': state.tab === 'warehouse'}">
                        <span class="menu-icon">ðŸ“¦</span>
                        <span class="menu-text">Warehouse</span>
                    </button>
                </nav>
            </aside>

            <!-- Main Content -->
            <main class="lms-main-content">
                <t t-if="state.tab === 'overview'">
                    <div class="lms-overview">
                        <h2>Welcome to Logistics Management System</h2>
                        <p>Select a module from the sidebar to get started.</p>
                        
                        <div class="lms-cards">
                            <div class="lms-card" t-on-click="() => setActiveSection('lead')">
                                <div class="card-icon">ðŸ‘¥</div>
                                <h3>CRM Leads</h3>
                                <p>Manage customer relationships</p>
                            </div>
                            
                            <div class="lms-card" t-on-click="() => setActiveSection('warehouse')">
                                <div class="card-icon">ðŸ“¦</div>
                                <h3>Warehouse</h3>
                                <p>Track inventory and transfers</p>
                            </div>
                        </div>
                    </div>
                </t>
            </main>
        </div>
    </t>
</templates>
